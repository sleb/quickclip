{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for all windows",
  "windows": ["main", "about", "prefs"],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:image:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "shell:allow-open",
    "core:webview:default",
    "core:webview:allow-internal-toggle-devtools",
    "core:window:allow-hide",
    "autostart:default"
  ]
}
